---
import Button from "../components/ui/Button.astro";
import IconWhatsapp from "../assets/icons/brand-whatsapp.svg";

import Image from "astro/components/Image.astro";
import img from "../assets/images/gravasteel-sede.webp";
---

<section id="sobre" class="bg-white py-24 border-t border-zinc-100 bg-gradient-to-t from-white  to-zinc-50">
   <div
      class="max-w-7xl mx-auto px-6 lg:px-8 grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24 items-center"
   >
      <!-- Coluna de texto -->
      <div>
         <span
            class="inline-block text-xs font-medium tracking-[0.25rem] uppercase text-zinc-600 bg-zinc-100 px-6 py-2 rounded"
         >
            Quem somos
         </span>

         <h2
            class="mt-6 text-4xl md:text-5xl font-semibold text-zinc-900 leading-tight"
         >
            Sobre a Gravasteel 
         </h2>

         <p class="mt-6 text-lg text-zinc-500 leading-relaxed">
            A Gravasteel é uma empresa gaúcha, de Caxias do Sul, criada para
            renovar o mercado de gravações a laser. Unimos inovação, agilidade e
            precisão, com atendimento técnico especializado e serviços
            realizados também no local do cliente.
         </p>

         <div class="mt-8">
            <Button
               text="Fale consoco"
               href="https://wa.me/5554936183497?text=Ol%C3%A1!%20Gostaria%20de%20falar%20com%20um%20vendedor."
            >
               <IconWhatsapp slot="icon" class="w-5 h-5 -ms-1" />
            </Button>
         </div>
      </div>

      <!-- Coluna da imagem -->
      <div class="relative">
         <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-lg">
            <Image
               src={img}
               alt="Positive Studio team working"
               class="w-full h-full object-cover object-center"
            />
         </div>


      </div>
   </div>
</section>
