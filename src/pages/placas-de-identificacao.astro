---
import Layout from "../layouts/Layout.astro";
import Button from "../components/ui/Button.astro";
import Background from "../assets/images/gravasteel-background-01.webp";
import IconWhatsapp from "../assets/icons/brand-whatsapp.svg";

import Gallery from "../components/Gallery.astro";

import { pageData } from "../data/pages/placas-de-identificacao";

import Header from "../components/Header.astro";
import Clients from "../components/Clients.astro";
import About from "../components/About.astro";
import Faq from "../components/Faq.astro";
import Benefits from "../components/blocks/benefits.astro";
import Featured from "../components/blocks/featured.astro";
import Footer from "../components/Footer.astro";

import Image from "astro/components/Image.astro";

import img1 from "../assets/images/gravasteel-home-gravacao-de-moldes.webp";

---

<Layout title="Placas de Identificação | Gravasteel">
   <Header {...pageData.navbarMenu} />


   <div
      style={`background-image: url(${Background.src});`}
      class="absolute inset-0 -z-10 bg-cover bg-center opacity-20"
   >
      <div
         class="absolute inset-0 bg-gradient-to-b from-zinc-900 via-white/50 to-white"
      >
      </div>
   </div>

   <div
      class="relative max-w-7xl mx-auto px-4 lg:px-8 w-full lg:w-[95%] pt-28 pb-20 lg:pt-52 flex flex-col lg:flex-row items-center gap-16"
   >
      <!-- Coluna Esquerda -->
      <div class="w-full  lg:w-1/2  text-left pt-20 md:pt-0">
         <h1
            class="text-4xl xl:text-5xl text-zinc-900 font-semibold leading-tight tracking-tight text-balance"
         >
            Placas de tdentificação em Aço Inox (420) e Alumínio 
         </h1>

         <p
            class="mt-6 text-lg text-zinc-900 max-w-xl mx-auto lg:mx-0 font-medium mb-12"
         >
            Identifique informações técnicas, números de série, instruções de
            operação, logos e selos de garantia em placas inoxidáveis projetadas
            para resistir a uso intenso, abrasão e condições severas.
         </p>

         <Button
            text="Fale com um especialista"
            href="https://wa.me/5554981171189?text=Ol%C3%A1!%20Gostaria%20de%20falar%20com%20um%20vendedor."
            target="_blank"

         >
            <IconWhatsapp slot="icon" class="w-5 h-5 -ms-1" />
         </Button>
      </div>

      <div class="w-full lg:w-1/2 flex justify-center lg:justify-end">
         <div
            class="relative rounded-3xl overflow-hidden shadow-2xl w-full aspect-[4/3]"
         >
            <Image
               src={pageData.hero.image}
               alt="Máquina de corte a laser"
               class="w-full h-full object-cover"
            />
            <div
               class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent"
            >
            </div>
         </div>
      </div>
   </div>

   <Benefits id="aplicacoes" title={pageData.benefits.title} items={pageData.benefits.items} />

   <Featured {...pageData.applications} />

   <Gallery
      title={pageData.gallery.title}
      subtitle={pageData.gallery.subtitle}
      items={pageData.gallery.items}
   />

   <section id="servicos" class="bg-zinc-50 py-24">
      <div class="max-w-7xl mx-auto  px-6 lg:px-8 ">
         <div
            class="grid grid-cols-1 md:grid-cols-2 gap-20 items-center"
         >
            <Image
               src={img1}
               alt="Gravação a laser"
               class="rounded-xl border border-zinc-100"
            />

            <div>
               <h3 class="text-xl lg:text-2xl font-semibold text-zinc-900 mb-3">
               Gravações a laser para moldes
               </h3>
               <p class="text-zinc-700 mb-6">
                    Gravações a laser de alta precisão em peças técnicas, moldes e
               componentes metálicos - do menor detalhe a ferramentais de até
               100 toneladas. Resultado permanente, nítido e resistente, com
               acabamento impecável.
               </p>
               <div class="mt-8">
                  <Button
                     text="Saiba mais"
                     href="/"
                  >
                  </Button>
               </div>
            </div>
         </div>
      </div>
   </section>

   <Clients />

   <About />

   <Faq {...pageData.faq} />

   <Footer navLinks={pageData.footer.menu} />

</Layout>
