---
import Image from "astro/components/Image.astro";

import Button from "../components/ui/Button.astro";

import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Benefits from "../components/blocks/benefits.astro";
import Featured from "../components/blocks/featured.astro";
import Gallery from "../components/Gallery.astro";
import Clients from "../components/Clients.astro";
import About from "../components/About.astro";
import Faq from "../components/Faq.astro";
import Footer from "../components/Footer.astro";

import { pageData } from "../data/pages/gravacao-a-laser";

import Background from "../assets/images/gravasteel-background-01.webp";
import IconWhatsapp from "../assets/icons/brand-whatsapp.svg";
---

<Layout title="Gravação a Laser | Gravasteel">
   <Header {...pageData.navbarMenu} />

   <div
      style={`background-image: url(${Background.src});`}
      class="absolute inset-0 -z-10 bg-cover bg-center opacity-20"
   >
      <div
         class="absolute inset-0 bg-gradient-to-b from-zinc-900 via-white/50 to-white"
      >
      </div>
   </div>

   <div
      class="relative max-w-7xl mx-auto px-4 lg:px-8 w-full lg:w-[95%] pt-28 pb-20 lg:pt-52 flex flex-col lg:flex-row items-center gap-16"
   >
      <!-- Coluna Esquerda -->
      <div class="w-full lg:w-1/2 text-left pt-20 md:pt-0">
         <h1
            class="text-4xl xl:text-5xl text-zinc-900 font-semibold leading-tight tracking-tight text-balance"
         >
            {pageData.hero.title}
         </h1>

         <p
            class="mt-6 text-lg text-zinc-900 max-w-xl mx-auto lg:mx-0 font-medium mb-12"
         >
            {pageData.hero.subtitle}
         </p>

         <Button
            text={pageData.hero.buttonText}
            href={pageData.hero.buttonLink}
            target="_blank"
         >
            <IconWhatsapp slot="icon" class="w-5 h-5 -ms-1" />
         </Button>
      </div>

      <div class="w-full lg:w-1/2 flex justify-center lg:justify-end">
         <div
            class="relative rounded-3xl overflow-hidden shadow-2xl w-full aspect-[4/3]"
         >
            <Image
               src={pageData.hero.image}
               alt="Background gravação a laser"
               class="w-full h-full object-cover"
            />
            <div
               class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent"
            >
            </div>
         </div>
      </div>
   </div>

   <Benefits
      id="beneficios"
      title={pageData.benefits.title}
      items={pageData.benefits.items}
   />

   <Featured id="aplicacoes" {...pageData.applications} />

   <Gallery {...pageData.gallery} />

   <Clients />

   <About />

   <Faq {...pageData.faq} />

   <Footer navLinks={pageData.footer.menu} />
</Layout>
